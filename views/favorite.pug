body.index-page
  include ./includes/masthead.pug

  .list-container
    -
      var message01 = `
        swal({
          title: "찜목록을 모두 삭제하시겠습니까?",
          text: "",
          type: "warning",
          showCancelButton: true,
          confirmButtonColor: "#DD6B55",
          confirmButtonText: "삭제",
          cancelButtonText: "아니오",
          closeOnConfirm: false
        },
        function(){
          swal("삭제 되었습니다.", "", "success");
