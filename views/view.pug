  //-- 슬라이더 모달
  #sliderModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='sliderModalLabel', aria-hidden='true')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          h5#sliderModalLabel.modal-title Deluxe Room
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') ×
        .modal-body
          #carouselRoomPicture.carousel.slide(data-ride='carousel')
            ol.carousel-indicators
              li.active(data-target='#carouselRoomPicture', data-slide-to='0')
              li(data-target='#carouselRoomPicture', data-slide-to='1')
              li(data-target='#carouselRoomPicture', data-slide-to='2')
            .carousel-inner
              .carousel-item.active
                img.d-block.w-100(src='/images/temp-hotel-02.png', alt='First slide')
              .carousel-item
                img.d-block.w-100(src='/images/temp-hotel-03.png', alt='Second slide')
              .carousel-item
                img.d-block.w-100(src='/images/temp-hotel-04.png', alt='Third slide')
            a.carousel-control-prev(href='#carouselRoomPicture', role='button', data-slide='prev')
              span.carousel-control-prev-icon(aria-hidden='true')
              span.sr-only Previous
            a.carousel-control-next(href='#carouselRoomPicture', role='button', data-slide='next')
              span.carousel-control-next-icon(aria-hidden='true')
              span.sr-only Next